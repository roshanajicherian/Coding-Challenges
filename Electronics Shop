#include <iostream>
using namespace std;

int main()
{
  int b=0,n=0,m=0,sumi=0,sumf=0;
  int sum=0, gre=0;
    cin>>b>>n>>m;
 int key[n],us[m];

    for(int i=0;i<n;i++)
        cin>>key[i];
    for(int i=0;i<m;i++)
        cin>>us[i];
 for(int i=0;i<n;i++)
 {

     for(int j=0;j<m;j++)
     {
         sum= key[i]+us[j];
         if ((sum> gre) && (sum<b))
                gre = sum;


     }
 }
 if(gre==0)
 {
     gre=-1;
 }
 cout<<gre;
}
